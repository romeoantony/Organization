<Window
    x:Class="Organization.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Organization"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.Resources>
        <!-- Use the built-in BooleanToVisibilityConverter for visibility bindings -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="16">
        <StackPanel>
            <!--  Add Employee Button  -->
            <Button
                Width="120"
                Margin="0,0,0,8"
                HorizontalAlignment="Left"
                Command="{Binding ShowAddEmployeeFormCommand}"
                Content="Add Employee" />

            <!--  Inline Add Employee Form (Visibility bound to ViewModel)  -->
            <StackPanel
                Margin="0,0,0,16"
                Orientation="Horizontal"
                Visibility="{Binding IsAddEmployeeFormVisible, Converter={StaticResource BoolToVisibilityConverter}}">
                <TextBox
                    Width="150"
                    Margin="0,0,8,0"
                    ToolTip="Name"
                    Text="{Binding NewEmployeeName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox
                    Width="120"
                    Margin="0,0,8,0"
                    ToolTip="Position"
                    Text="{Binding NewEmployeePosition, UpdateSourceTrigger=PropertyChanged}" />
                <TextBox
                    Width="100"
                    Margin="0,0,8,0"
                    ToolTip="Salary"
                    Text="{Binding NewEmployeeSalary, UpdateSourceTrigger=PropertyChanged}" />
                <Button
                    Width="80"
                    Command="{Binding AddEmployeeCommand}"
                    Content="Save" />
                <Button
                    Width="80"
                    Margin="8,0,0,0"
                    Command="{Binding CancelAddEmployeeCommand}"
                    Content="Cancel" />
            </StackPanel>

            <!-- Error message for form validation -->
            <TextBlock
                Foreground="Red"
                FontWeight="Bold"
                Margin="0,0,0,8"
                TextWrapping="Wrap"
                Text="{Binding FormErrorMessage}" />

            <!--  Employee List (to be replaced with ItemsControl and EmployeeCard)  -->
            <ItemsControl ItemsSource="{Binding Employees}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:EmployeeCard />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Window>
